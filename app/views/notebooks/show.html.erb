
<div class="wrapper_with_padding">
  <h2><b><%=@notebook.notebook_title%></b></h2>

  <div class="clearfix" id="notes">
    <%unless @notebook.notes.blank? %>

    <% @notebook.notes.each do |note|  %>
    <div class="note">
      <p class="title">    
        <%= link_to note.note_title, note_path(note) %>

      </p>  
      <p class="date">
        <%= time_ago_in_words(note.created_at) %>
      </p>
      <p class= "delete">
         <%=link_to "Edit", edit_note_path(note)  %>
         <%=link_to "Delete", note_path(note), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
        <%end%>


    </div>
    <hr><%=link_to "Create New Note", new_notebook_note_path(@notebook), class: "button" %>
    <%else%>
    <h2>Add a Note!</h2>
    <p>It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.</p>
    <button>
      <%= link_to "New Note", new_notebook_note_path(@notebook) %>
    </button>
    <% end %>
  </div>

</div>

