<div class="wrapper_with_padding">
 <div class="clearfix" id="notes">
 <h4>Here are <%= current_user.email %> current Notes today:  </h4>
  <%unless @notes.blank? %>
  <% @notes.each do |note| %>
  <div class="note" data-toggle="modal" data-target="#myModal" data-id ="<%=note.id%>">
    <p class="title">   
      <%= note.note_title %>
    </p>
    <p class= "delete">
      <%= link_to "Delete", note_path(note), method: :delete, data: { confirm: "Are you sure?" } %></p>
    </div>
    <%end%>
    <%else%>
    <h2>Add a Note!</h2>
    <p>It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.</p>
    <button>
      <%= link_to "New Note", new_note_path %>
    </button>
    <% end %>
  </div>
</div>

  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
      </div>
    </div>
  </div>
</div>

  